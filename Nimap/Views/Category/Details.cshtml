@model Nimap.Controllers.Category

<div>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Category ID:</dt>
        <dd>@Model.CategoryId</dd>
        <dt>Category Name:</dt>
        <dd>@Model.CategoryName</dd>
    </dl>
</div>

<div>
    <h4>Associated Products</h4>
    <hr />
    @if (Model.Products != null && Model.Products.Any())
    {
        <table class="table">
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
            </tr>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.ProductName</td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No associated products found.</p>
    }
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CategoryId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
